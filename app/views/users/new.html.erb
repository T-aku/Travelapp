<%= form_with model: @user do |f| %>
  <div class="form_container">
    <ul class="contents_form">
      <div>
        <li><%= f.label :username, 'ニックネーム' %><span>&nbsp;※</span></li>
        <li><%= f.text_field :username, class: "input_form", placeholder: '(例）村田　真一', autofocus: true %></li>
      </div>
      <div>
        <li><%= f.label :email, 'メールアドレス' %><span>&nbsp;※</span></li>
        <li><%= f.email_field :email, class: "input_form", placeholder: '(例）shinichi@murata.com' %></li>
      </div>
      <div>
        <li><%= f.label :password, 'パスワード' %><span>&nbsp;※</span></li>
        <li><%= f.password_field :password, class: "input_form", placeholder: 'XXXXXXXX' %></li>
      </div>
      <li><%= f.submit("登録", class: "submit_form") %></li>
    </ul>
  </div>
<% end %>