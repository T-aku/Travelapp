<%= form_with(model: @product, local: true) do |f| %>
  <div class="form_container">
    <ul class="contents_form">
      <div>
        <li><%= f.label :productname, '商品名' %></li>
        <li><%= f.text_field :productname, class: "input_form", placeholder: '(例）はちみつ', autofocus: true %></li>
      </div>
      <div>
        <li><%= f.label :countryname, '国名' %></li>
        <% if !@product.country.nil? %>
          <li><%= f.text_field :countryname, value: @product.country.countryname, class: "input_form", placeholder: '(例）ギリシャ', autofocus: true %></li>
        <% else %>
          <li><%= f.text_field :countryname, class: "input_form", placeholder: '(例）ギリシャ', autofocus: true %></li>
        <% end %>
      </div>
      <div>
        <li><%= f.label :comment, 'コメント' %></li>
        <li><%= f.text_field :comment, class: "input_form_product_comment", placeholder: '(例）サントリーニ島のはちみつ！！' %></li>
      </div>
      <div>
        <li><%= f.label :image, '商品画像' %></li>
        <li><%= f.file_field :image %><%= f.hidden_field :image_cache %></li>
      </div>
      <li><%= f.submit("出品", class: "submit_form") %></li>
    </ul>
  </div>
<% end %>