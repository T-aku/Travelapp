<div class="country_product_container">
  <div class="country_product_title">
    <%= @products[0].productname %>一覧
  </div>
  <div class="products_list">
    <% @products.each do |product| %>
    <div class="product_parts">
      <%= link_to product_path(product) do %>
        <% if !product.image.blank? %>
          <%= image_tag product.image.url, class: "product_image" %>
        <% else %>
          <%= image_tag 'noimage.jpeg', class: "product_image" %>
        <% end %>
      <% end %>
      <p class="product_name"><%= link_to product.productname, product_path(product) %></p>
      <p class="product_comment"><%= product.comment %></p>
    </div>
    <% end %>
  </div>
</div>